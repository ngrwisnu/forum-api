{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": ["error", "always"],
    "no-undef": "off"
  },
  "ignorePatterns": [
    "src/Domains/**/*Repository.js",
    "src/Applications/security/**/*.js",
    "src/Applications/validation/**/*.js"
  ]
}
